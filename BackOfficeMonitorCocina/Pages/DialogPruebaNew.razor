@using MudBlazor;

@inject NavigationManager NavigationManager
@inject ISnackbar Snackbar
<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6">@Title</MudText>
        <MudList Clickable="true">
            @foreach (var item in Items)
            {
                <MudListItem Text="@item" OnClick="@(() => SelectItem(item))" />
            }
        </MudList>
        <MudList Clickable="true">
            @foreach (var item in prueba)
            {
                <MudListItem Text="@item.Name" OnClick="@(() => SelectItem(item.Name))" />
            }
        </MudList>

        <MudSelect T="string" Label="Favorite Coffee" AnchorOrigin="Origin.BottomCenter">
            @foreach (var item in prueba)
            {
                <MudSelectItem Value="@(item.Name)" />
            }       
        </MudSelect>
    </DialogContent>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public string Title { get; set; }

    [Parameter] public List<string> Items { get; set; }

    [Parameter]
    public IEnumerable<DAL.DAO.Family> prueba { get; set; } = Array.Empty<DAL.DAO.Family>();

    private void SelectItem(string item)
    {
        MudDialog.Close(DialogResult.Ok(item));
    }
}