@using Microsoft.AspNetCore.Components.Authorization

<MudPaper Elevation="25">
    <MudToolBar>
        <MudButton Href="@($"/monitor/{idMonitor}")"
                   Rel="nofollow"
                   Variant="Variant.Filled"
                   Color="Color.Primary" Class="mr-10">
            Articulos
        </MudButton>

        <MudButton Href="@($"/state/{idMonitor}")"
                   Rel="nofollow"
                   Variant="Variant.Filled"
                   Color="Color.Primary" Class="mr-10">
            Estados
        </MudButton>
        <MudButton Href="@($"/family/{idMonitor}")"
                   Rel="nofollow"
                   Variant="Variant.Filled"
                   Color="Color.Primary">
            Familia
        </MudButton>
    </MudToolBar>
</MudPaper>
@code {
    [Parameter]
    public int? idMonitor { get; set; }
}
